root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Config files.
[{*.json,*.yaml,*.yml,*.toml,*.nix,.ecrc,*.d2}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Code files.
[{*.go,go.mod,go.sum,go.work,*.py,*.js,*.ts,*.rb}]
trim_trailing_whitespace = true

[*.sql]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{*.typ,*.typst}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[Earthfile]
indent_style = space
indent_size = 4
